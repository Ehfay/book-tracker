<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title> 
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <%- include('partials/header') %>
 
    <a href="/add">Add New Book</a>
  </header>

  <section>
    <% books.forEach(book => { %>
        <div class="book-item">
          <h3><%= book.title %></h3>
          <p>Author: <%= book.author %></p>
          <p>Genre: <%= book.genre %></p>
          <p>Status: <%= book.status %></p>

          <% if (book.coverImage) { %>
            <img src="<%= book.coverImage %>" alt="Cover image of <%= book.title %>" class="book-cover">
          <% } else { %>
            <p>No cover image available</p>
          <% } %>

          <div class="review">
            <h2>Review:</h2>
            <p><%= book.review %></p> 
        </div>

          <a href="/edit/<%= book.id %>">Edit</a>
          <form action="/delete/<%= book.id %>" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </div>

      
        <script>
          console.log('Cover image for <%= book.title %>: <%= book.coverImage %>');
        </script>
      <% }) %>      
  </section>
</body>
</html>
